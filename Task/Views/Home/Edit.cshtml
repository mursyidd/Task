@model Person

@{
    ViewData["Title"] = "Edit Person";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Edit Person</h2>

    <div class="card shadow-lg p-4">
        <form method="post" asp-action="Edit">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label class="form-label">First Name:</label>
                <input type="text" asp-for="FirstName" class="form-control" placeholder="Enter First Name" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Last Name:</label>
                <input type="text" asp-for="LastName" class="form-control" placeholder="Enter Last Name" required />
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success px-4">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
            </div>
        </form>
    </div>
</div>
